script/source = "extends Container

const anchors = [[0.0, 0.5], [0.5, 1.0], [1.0, 0.5], [0.5, 0.0], [0.5, 0.5]]
var is_open = false

func _ready():
	for child in get_children():
		child.anchor_left = 0.5
		child.anchor_top = 0.5

func show():
	visible = true
	is_open = true
	for i in get_child_count():
		$\"../Tween\".interpolate_property(get_children()[i],
			\"anchor_top\", 0.5, anchors[i][0], 0.3)
		$\"../Tween\".interpolate_property(get_children()[i],
			\"anchor_bottom\", 0.5, anchors[i][0], 0.3)
		$\"../Tween\".interpolate_property(get_children()[i],
			\"anchor_left\", 0.5, anchors[i][1], 0.3)
		$\"../Tween\".interpolate_property(get_children()[i],
			\"anchor_right\", 0.5, anchors[i][1], 0.3)
	$\"../Tween\".start()

func _on_Container_mouse_exited():
	is_open = false
	for child in get_children():
		$\"../Tween\".interpolate_property(child,
			\"anchor_top\", child.anchor_top, 0.5, 0.3)
		$\"../Tween\".interpolate_property(child,
			\"anchor_bottom\", child.anchor_bottom, 0.5, 0.3)
		$\"../Tween\".interpolate_property(child,
			\"anchor_left\", child.anchor_left, 0.5, 0.3)
		$\"../Tween\".interpolate_property(child,
			\"anchor_right\", child.anchor_right, 0.5, 0.3)
	$\"../Tween\".start()

func _on_Tween_tween_all_completed():
	if not is_open:
		visible = false
"

